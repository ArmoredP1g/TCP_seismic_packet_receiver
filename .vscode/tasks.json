{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "数据包接收端",
            "command": "/usr/bin/g++",
            "args": [
                "-o",
                "${fileDirname}/PackageReceiver",
                "-fdiagnostics-color=always",
                // "-g",
                "-I/usr/lib/x86_64-linux-gnu/glib-2.0/include",
                "-I/usr/include/librdkafka",
                "-L/usr/lib/x86_64-linux-gnu",
                "${workspaceFolder}/PackageReceiver.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "数据包发送端",
            "command": "/usr/bin/g++",
            "args": [
                "-o",
                "${fileDirname}/PackageSubmitter",
                "-fdiagnostics-color=always",
                // "-g",
                "-I/usr/lib/x86_64-linux-gnu/glib-2.0/include",
                "-I/usr/include/librdkafka",
                "-L/usr/lib/x86_64-linux-gnu",
                "${workspaceFolder}/PackageSubmitter.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}